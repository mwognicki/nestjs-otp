{
  "name": "@ognicki/nestjs-otp",
  "version": "1.0.0",
  "description": "OTP (One-Time Password) module for NestJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/mwognicki/nestjs-otp"
  },
  "bugs": {
    "url": "https://github.com/mwognicki/nestjs-otp/issues"
  },
  "author": "Marek Kapusta-Ognicki <marek@ognicki.pro>",
  "license": "MIT",
  "keywords": [
    "NestJS",
    "OTP",
    "authentication",
    "two-factor authentication",
    "OTP authentication",
    "security",
    "authentication module"
  ],
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "build:docs": "npx typedoc --out docs lib/index.ts --plugin typedoc-plugin-markdown",
    "dev": "tsc -w",
    "format": "prettier --write \"{lib}/**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepare": "npm run build",
    "prepublish:beta": "npm run build",
    "prepublish:npm": "npm run build",
    "prepublishOnly": "npm run build && npm run build:docs",
    "publish:beta": "npm publish --access public --tag beta",
    "publish:npm": "npm publish --access public",
    "release": "release-it"
  },
  "dependencies": {
    "otpauth": "^9.2.2",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@types/node": "^14.18.13",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "release-it": "^17.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.8",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0 || ^9.0.0 || ^10.0.0",
    "reflect-metadata": "^0.1.12"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
